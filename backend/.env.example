# Server-Konfiguration
NODE_ENV=development
PORT=5000

# MongoDB-Verbindung
MONGO_URI=mongodb://localhost:27017/familyhub

# JWT-Konfiguration
JWT_SECRET=dein_geheimer_schlüssel_hier_eintragen
JWT_EXPIRE=7d

# Email-Konfiguration (für zukünftige Funktionen)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=benachrichtigungen@example.com
EMAIL_PASSWORD=dein_email_passwort_hier
EMAIL_FROM=FamilyHub <benachrichtigungen@example.com>

# API-Keys für externe Dienste
WEATHER_API_KEY=dein_wetter_api_schlüssel
TRAFFIC_API_KEY=dein_verkehr_api_schlüssel
NEWS_API_KEY=dein_nachrichten_api_schlüssel

# Upload-Konfiguration
MAX_FILE_SIZE=10485760 # 10MB in Bytes
UPLOAD_PATH=uploads

# Logging
LOG_LEVEL=info